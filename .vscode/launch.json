    "version": "0.2.0",
    "configurations": [
        {
            "name": "libtests serial",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/serial/.libs/libtest_serial",
            "stopAtEntry": false,
            "cwd": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/serial/",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "libtests apps",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/apps/.libs/libtest_apps",
            "stopAtEntry": false,
            "cwd": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/apps/",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "libtests utils",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/utils/.libs/libtest_utils",
            "stopAtEntry": false,
            "cwd": "${env:GEOMODELGRIDS_BUILDDIR}/tests/libtests/utils/",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "Attach to process",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "/bin/bash", // Any program that exists
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        }
    ]
}